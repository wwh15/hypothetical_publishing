generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int      @id @default(autoincrement())
  email     String   @unique
  createdAt DateTime @default(now()) @map("created_at")
  
  @@map("users")
}

model Author {
  id        Int      @id @default(autoincrement())
  name      String   @unique
  email     String?  @unique
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  // many-to-many
  books     Book[]

  @@index([name])
  @@map("authors")
}

model Book {
  id                Int      @id @default(autoincrement())
  title             String
  isbn13            String?  @unique
  isbn10            String?  @unique
  authorRoyaltyRate Float    @default(0.25) @map("author_royalty_rate")
  createdAt         DateTime @default(now()) @map("created_at")
  updatedAt         DateTime @updatedAt @map("updated_at")

  // many-to-many
  authors           Author[]

  // Relations
  sales             Sale[]

  @@index([title])
  @@index([isbn13])
  @@index([isbn10])
  @@map("books")
}


model Sale {
  id               Int      @id @default(autoincrement())
  bookId           Int      @map("book_id")
  date             String   // MM-YYYY format (e.g., "01-2025")
  quantity         Int
  publisherRevenue Float    @map("publisher_revenue")
  authorRoyalty    Float    @map("author_royalty")
  royaltyOverridden Boolean @default(false) @map("royalty_overridden") // Track if manually set
  paid             Boolean  @default(false) // Payment status
  createdAt        DateTime @default(now()) @map("created_at")
  updatedAt        DateTime @updatedAt @map("updated_at")
  
  // Relations
  book             Book     @relation(fields: [bookId], references: [id], onDelete: Restrict)
  
  // Indexes for common query patterns
  @@index([bookId]) // For filtering by book
  @@index([paid]) // For filtering paid/unpaid
  @@index([date]) // For date range filtering and sorting
  @@index([bookId, date]) // Composite for book sales over time
  @@map("sales")
}

